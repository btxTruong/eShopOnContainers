{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "dist",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "test"
  ]
}
