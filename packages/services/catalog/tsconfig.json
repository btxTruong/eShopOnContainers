{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "dist",
    "moduleResolution": "node",

    "lib": [
      "es2017"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@infra/*": [
        "src/infrastructure/*"
      ],
      "@config": [
        "src/config.ts"
      ],
      "@entry-point/*": [
        "src/entry-points/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@swagger-document": [
        "src/swagger.json"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "test"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
