{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "dist",
    "lib": ["es2017"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@infra/*": ["src/infrastructure/*"],
      "@config": ["src/config.ts"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "test"
  ]
}
